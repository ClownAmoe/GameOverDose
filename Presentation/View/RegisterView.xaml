<UserControl x:Class="Presentation.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Presentation.ViewModels"
             
             Background="Transparent" 
             Width="400" 
             Height="550">

    <UserControl.Resources>

        <Style x:Key="InputBaseStyle" TargetType="Control">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Control}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource InputBaseStyle}">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="#FF3030"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Grid>
                                <TextBlock Text="{Binding Path=(vm:PlaceholderHelper.Placeholder), RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                           Margin="{TemplateBinding Padding}"
                                           Foreground="#888888" 
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Text.Length}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsFocused}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ScrollViewer x:Name="PART_ContentHost" Focusable="False" 
                                              HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox" BasedOn="{StaticResource InputBaseStyle}">
            <Setter Property="PasswordChar" Value="•"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="#FF3030"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Grid>
                                <TextBlock Text="{Binding Path=(vm:PlaceholderHelper.Placeholder), RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                           Margin="{TemplateBinding Padding}"
                                           Foreground="#888888" 
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(vm:PasswordBoxHelper.Password), FallbackValue=''}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsFocused}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ScrollViewer x:Name="PART_ContentHost" Focusable="False" 
                                              HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RegisterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF3030"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#AA1010"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Border Background="#101010" BorderBrush="#FF3030" BorderThickness="2" CornerRadius="10" Padding="30" 
            HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

            <TextBlock Text="CREATE ACCOUNT" FontSize="24" FontWeight="ExtraBold"
                       HorizontalAlignment="Center" Margin="0,0,0,30"
                       Foreground="#E0E0E0"/>

            <TextBlock Text="Username" Margin="0,0,0,3"/>
            <TextBox Text="{Binding Username, Mode=TwoWay}" Margin="0,0,0,15"
                     vm:PlaceholderHelper.Placeholder="Choose a unique username"/>

            <TextBlock Text="Email" Margin="0,0,0,3"/>
            <TextBox Text="{Binding Email, Mode=TwoWay}" Margin="0,0,0,15"
                     vm:PlaceholderHelper.Placeholder="name@example.com"/>

            <TextBlock Text="Password" Margin="0,0,0,3"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15"
                         vm:PasswordBoxHelper.Attach="True" 
                         vm:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay}"
                         vm:PlaceholderHelper.Placeholder="Min. 8 characters"/>

            <TextBlock Text="Confirm Password" Margin="0,0,0,3"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,25"
                         vm:PasswordBoxHelper.Attach="True" 
                         vm:PasswordBoxHelper.Password="{Binding ConfirmPassword, Mode=TwoWay}"
                         vm:PlaceholderHelper.Placeholder="Re-enter password"/>

            <Button Content="REGISTER" 
                    Style="{StaticResource RegisterButtonStyle}"
                    Height="50" 
                    HorizontalAlignment="Stretch" 
                    Margin="0,0,0,15"
                    Command="{Binding RegisterCommand}"/>

            <Button Background="Transparent" 
                    Height="30" 
                    HorizontalAlignment="Center" 
                    Command="{Binding GoToLoginCommand}"
                    Padding="0"
                    Style="{StaticResource {x:Type Button}}">
                <TextBlock Text="I already have an account" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#FF3030" 
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Button}}, Path=IsMouseOver}" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

            </Button>

        </StackPanel>
    </Border>
</UserControl>